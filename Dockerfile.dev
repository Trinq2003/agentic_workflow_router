# Development Dockerfile for NetMind Workflow
FROM python:3.10-slim

# Set environment variables
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    ENV=development

# Install system dependencies for development
RUN apt-get update && apt-get install -y \
    # Build tools
    build-essential \
    gcc \
    g++ \
    libffi-dev \
    # Development tools
    git \
    curl \
    wget \
    vim \
    nano \
    htop \
    # Required for Excel processing
    libxml2 \
    libxslt1.1 \
    # Required for Dagster
    graphviz \
    # Required for Jupyter
    libzmq3-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Python development dependencies
COPY requirements.txt .
RUN pip install --upgrade pip && \
    pip install -r requirements.txt && \
    # Additional development dependencies
    pip install \
        jupyter \
        jupyterlab \
        black \
        isort \
        flake8 \
        mypy \
        pytest \
        pytest-cov \
        pytest-mock \
        watchdog \
        ipython \
        ptpython

# Create workspace directory
WORKDIR /app

# Copy source code
COPY . .

# Set Python path
ENV PYTHONPATH=/app/src

# Create non-root user for development
RUN groupadd -r netmind && useradd -r -g netmind -s /bin/bash netmind && \
    chown -R netmind:netmind /app

USER netmind

# Expose ports
EXPOSE 3000 8888 8000

# Default command for development
CMD ["python", "-c", "print('Development environment ready for NetMind Workflow')"]
